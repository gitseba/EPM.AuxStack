<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="TxtBlock_Spinner"
			 TargetType="{x:Type TextBlock}">
		<!-- Font and Text Settings -->
		<Setter Property="FontFamily"
				  Value="{StaticResource FontAwesome}" />
		<Setter Property="Text"
				  Value="{StaticResource fa-spinner}" />
		<Setter Property="RenderTransformOrigin"
				  Value="0.5, 0.5" />

		<!-- Define RotateTransform directly in RenderTransform -->
		<Setter Property="RenderTransform">
			<Setter.Value>
				<RotateTransform Angle="0" />
			</Setter.Value>
		</Setter>

		<!-- Animation Resource -->
		<Style.Resources>
			<Storyboard x:Key="SpinStoryboard"
							RepeatBehavior="Forever">
				<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
									  From="0"
									  To="360"
									  Duration="{StaticResource SpinnerAnimationDuration}" />
			</Storyboard>
		</Style.Resources>

		<!-- Trigger to Start/Stop Animation Based on Visibility -->
		<Style.Triggers>
			<DataTrigger Binding="{Binding IsVisible, RelativeSource={RelativeSource Self}}"
							 Value="True">
				<DataTrigger.EnterActions>
					<BeginStoryboard Name="SpinStoryboardControl"
										  Storyboard="{StaticResource SpinStoryboard}" />
				</DataTrigger.EnterActions>
				<DataTrigger.ExitActions>
					<RemoveStoryboard BeginStoryboardName="SpinStoryboardControl" />
				</DataTrigger.ExitActions>
			</DataTrigger>
		</Style.Triggers>
	</Style>
</ResourceDictionary>
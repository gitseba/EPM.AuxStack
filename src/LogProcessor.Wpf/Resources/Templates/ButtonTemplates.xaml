<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						  xmlns:attached="clr-namespace:LogProcessor.Wpf.Attached"
						  xmlns:converters="clr-namespace:LogProcessor.Wpf.Converters">

	<ControlTemplate x:Key="Btn_IconTemplate"
						  TargetType="{x:Type Button}">
		<Border x:Name="border_template"
				  BorderThickness="{TemplateBinding BorderThickness}"
				  Background="#202020"
				  SnapsToDevicePixels="True"
				  CornerRadius="0,0,0,0"
				  Margin="{TemplateBinding Margin}"
				  Padding="{TemplateBinding Padding}">
			<Border.Clip>
				<RectangleGeometry Rect="0,0,250,40"
										 RadiusX="4"
										 RadiusY="4" />
			</Border.Clip>
			<Border.Effect>
				<DropShadowEffect BlurRadius="10"
										ShadowDepth="4"
										Opacity="0.3" />
			</Border.Effect>
			<StackPanel Orientation="Horizontal"
							Margin="{TemplateBinding Margin}"
							HorizontalAlignment="Center"
							VerticalAlignment="Center">
				<!--Icon-->
				<TextBlock x:Name="_content"
							  Text="{TemplateBinding Tag}"
							  FontFamily="{StaticResource FontAwesome}"
							  Padding="{TemplateBinding Padding}"
							  Margin="0 2 4 0"
							  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
							  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
							  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
							  Foreground="{TemplateBinding Foreground}"
							  Visibility="{TemplateBinding attached:IsBusyProperty.Value, Converter={converters:BooleanIsNotTrueVisibilityConverter}}" />
				<TextBlock Style="{StaticResource TxtBlock_Spinner}"
							  Padding="{TemplateBinding Padding}"
							  Margin="0 2 4 0"
							  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
							  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
							  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
							  Visibility="{TemplateBinding attached:IsBusyProperty.Value, Converter={converters:BooleanIsTrueVisibilityConverter}}" />
				<!--Content-->
				<ContentPresenter Margin="2" />
			</StackPanel>
		</Border>
		<ControlTemplate.Triggers>
			<Trigger Property="IsEnabled"
						Value="False">
				<Setter Property="Opacity"
						  TargetName="border_template"
						  Value="0.50" />
			</Trigger>
			<Trigger Property="IsMouseOver"
						Value="True">
				<Setter Property="BorderBrush"
						  TargetName="border_template"
						  Value="#00a9ff" />
				<Setter Property="Foreground"
						  TargetName="_content"
						  Value="#00a9ff" />
			</Trigger>
			<Trigger Property="IsKeyboardFocused"
						Value="True">
				<Setter Property="BorderBrush"
						  TargetName="border_template"
						  Value="#4f83e3" />
			</Trigger>
		</ControlTemplate.Triggers>
	</ControlTemplate>

